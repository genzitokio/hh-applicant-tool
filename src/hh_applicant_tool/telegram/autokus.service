[Unit]
Description=AutoKus HR Bot Daemon
After=network.target

[Service]
Type=simple
User=flyingkuskus
WorkingDirectory=/home/flyingkuskus/AutoKus
ExecStart=/home/flyingkuskus/AutoKus/.venv/bin/python /home/flyingkuskus/AutoKus/daemon.py
